<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
	<persistence-unit name="persistencia" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<!-- List entity classes first (schema requires <class> before <exclude-unlisted-classes>) -->
		<class>modelo.entidad.Publicacion</class>
		<class>modelo.entidad.Mensaje</class>
		<class>modelo.entidad.Estado</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<!-- Si la base no existe, crearla: createDatabaseIfNotExist=true; ajustar serverTimezone si es necesario -->
			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/marketflow?createDatabaseIfNotExist=true&amp;serverTimezone=UTC"/>
			<property name="jakarta.persistence.jdbc.user" value="root"/>
			<property name="jakarta.persistence.jdbc.password" value=""/>
			<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="eclipselink.ddl-generation" value="create-tables"/>
			<property name="eclipselink.ddl-generation.output-mode" value="database"/>
			<!-- Opcional: mostrar SQL en consola -->
			<property name="eclipselink.logging.level" value="FINE"/>
		</properties>
	</persistence-unit>
</persistence>